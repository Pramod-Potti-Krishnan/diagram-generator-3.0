# Railway Environment Variables Configuration
# Copy these to your Railway project's environment variables

# ============================================================================
# REQUIRED: Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_BUCKET=diagram-charts

# Optional: Service key for admin operations (if needed)
# SUPABASE_SERVICE_KEY=your-service-key-here

# ============================================================================
# REQUIRED: Google Gemini API (for diagram generation)
# ============================================================================
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# Optional: Port Configuration
# ============================================================================
# Railway sets PORT automatically - do not set this manually
# PORT=8080

# ============================================================================
# Optional: AI Model Configuration
# ============================================================================
GEMINI_MODEL=gemini-2.0-flash-lite
ENABLE_SEMANTIC_ROUTING=False
ENABLE_LLM_MERMAID=True
LLM_DEBUG_MODE=False
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============================================================================
# Optional: Performance Configuration
# ============================================================================
MAX_WORKERS=4
TOKEN_LIMIT=4000
REQUEST_TIMEOUT=30
MAX_CONNECTIONS=100

# ============================================================================
# Optional: Cache Configuration
# ============================================================================
CACHE_TYPE=memory
CACHE_TTL=3600
ENABLE_CACHE=True

# ============================================================================
# Optional: Feature Flags
# ============================================================================
ENABLE_FALLBACK=True
ENABLE_METRICS=True
ENABLE_REQUEST_ANALYSIS=True

# ============================================================================
# Optional: Logging
# ============================================================================
LOG_LEVEL=INFO
# LOGFIRE_TOKEN=your-logfire-token-here

# ============================================================================
# Optional: Security
# ============================================================================
CORS_ORIGINS=*
# API_KEY=your-api-key-here

# ============================================================================
# Optional: Environment
# ============================================================================
ENV=production
STORAGE_PUBLIC=True
